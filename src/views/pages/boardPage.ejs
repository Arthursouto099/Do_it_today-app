<div class="container2">

    <!-- Menu lateral -->
    <div class="menu-lateral">
    
    <h1>MENU</h1>
    
    <div class="menu-lateral-left">
        <a href="#" onclick="createTask()">Criar Task</a>
        <a href="#">Item 2</a>
